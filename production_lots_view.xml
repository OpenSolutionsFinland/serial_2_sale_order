<?xml version="1.0"?>
<openerp>
	<data>
		<record id="stock_lot_search_enhanced" model="ir.ui.view">
			<field name="name">stock.lot.search.enhanced</field>
			<field name="model">stock.production.lot</field>
			<field name="inherit_id" ref="stock.search_product_lot_filter"/>
			<field name="arch" type="xml">
				<data>
					<search string="Product Lots Filter" position="inside">
						<field name="use_date" />
						<filter icon="terp-go-home" name="lot_bestbefore_filter" string="Best before 90 days" domain="[('use_date','&lt;=', (context_today() + datetime.timedelta(90)).strftime('%%Y-%%m-%%d'))]"/>
					</search>
				</data>
			</field>
		</record>
	</data>
</openerp>